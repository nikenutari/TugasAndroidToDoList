<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttonnn"
        android:fontFamily="@font/button"
        android:text="Back"
        android:textColor="@color/secondary"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_back"
        android:text="Hello,"
        android:paddingRight="175dp"
        android:textColor="@color/teks"
        android:textSize="30sp"
        android:fontFamily="@font/hsatu"
        android:layout_marginLeft="50dp"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:paddingRight="175dp"
        android:text="Sign Up!"
        android:textColor="@color/teks"
        android:textSize="20sp"
        android:fontFamily="@font/textsatu"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:layout_marginLeft="50dp"
        android:text="Username"
        android:textColor="@color/teks"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_regular" />

    <EditText
        android:id="@+id/usernameee"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/kolom"
        android:layout_below="@id/username"
        android:hint="Username"
        android:paddingLeft="20dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/secondary"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameee"
        android:layout_marginLeft="50dp"
        android:text="Email"
        android:textColor="@color/teks"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_regular" />

    <EditText
        android:id="@+id/emailll"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/kolom"
        android:layout_below="@id/email"
        android:hint="Email"
        android:paddingLeft="20dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/secondary"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailll"
        android:layout_marginLeft="50dp"
        android:text="Password"
        android:textColor="@color/teks"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_regular" />

    <EditText
        android:id="@+id/passssword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/kolom"
        android:layout_below="@id/password"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/secondary"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/passssword"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/buttonnn"
        android:fontFamily="@font/button"
        android:text="Register"
        android:textColor="@color/secondary"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>

</RelativeLayout>